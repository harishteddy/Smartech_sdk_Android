<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.netcore.smartech.sample">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activity.ProfileActivity"
            android:label="@string/update_profile"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/register"
            android:parentActivityName=".activity.LoginActivity" />



        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>



            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="mawgif" />
            </intent-filter>


        </activity>

        <!-- meta data for adding ID and App Key-->
        <meta-data
            android:name="HANSEL_APP_ID"
            android:value="SM5S0N0RG6VRIBHTP5U893MPX" />

        <meta-data
            android:name="HANSEL_APP_KEY"
            android:value="D9N1VMAIN08MOUMLTCJSU4DS7JP1G7CUNRGGTQAQ28PJBKW3LY" />

        <!-- Smartech panel's app Id-->
        <meta-data
            android:name="SMT_APP_ID"
            android:value="aa8c1ec3f32ecb46e591e9dffd5d3da4" />

        <meta-data
            android:name="SMT_IS_AUTO_FETCHED_LOCATION"
            android:value="1" />
        <service
            android:name=".service.FCMService"
            android:exported="true">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT" />
        </intent-filter>
        </service>

    </application>

</manifest>